<div class="col-lg-10">
  <div class="card rounded-0 shadow mt-5 mb-5 ">
    <div class="card-body">
      <p><%= notice %></p>

      <h1>Student Details</h1>

      <p><strong>First Name: </strong><%= @student.first_name %></p>
      <p><strong>Last Name: </strong><%= @student.last_name %></p>
      <p><strong>Email: </strong><%= @student.email %></p>

      <%= link_to 'Back' , students_path, class: "btn btn-primary" %>
      <%= link_to 'Edit' , edit_student_path(@student), class: "btn btn-secondary" %>
      <%= link_to 'Delete', @student, method: :delete , data: {confirm: 'Are You Sure?'}, class: "btn btn-secondary " %>
    </div>
  </div>
</div>